@model List<UserModel>
@{
    ViewData["Title"] = "Hem";
}


<div id="users" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i == 0)
            {
                <div class="carousel-item active">
                    <div class="invisible" id="id"> @Model[i].ID</div>
                    <div class="profile-container p-5 container">
                        <div class="card" style="width: 25rem;">
                            <div class="carousel slide" id="profileimages" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    @for (int y = 0; y < Model[i].Images.Count; y++)
                                    {
                                        if (y == 0)
                                        {
                                            <li data-target="#profileimages" data-slide-to="@y" class="active"></li>
                                        }
                                        else
                                        {
                                            <li data-target="#profileimages" data-slide-to="@y"></li>
                                        }
                                    }
                                </ol>
                                <div class="carousel-inner">
                                    @for (int j = 0; j < Model[i].Images.Count; j++)
                                    {
                                        if (j == 0)
                                        {
                                            <div class="carousel-item active">
                                                <img class="d-block w-100" src="@Model[i].Images[j].Url" />
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100" src="@Model[i].Images[j].Url" />
                                            </div>
                                        }
                                    }
                                </div>
                                <a class="carousel-control-prev" href="#profileimages" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#profileimages" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>

                            </div>

                            <div class="container">
                                <h4><b>@Model[i].Firstname @Model[i].Surname @{var age = DateTime.Today.Year - Model[i].Age.Year; } @age År</b></h4>
                                <p name="gender"><i class="fas fa-venus-mars mr-2" style=" color: #eb6864"></i>@Model[i].Gender</p>
                                <p><i class="fas fa-map-marker-alt mr-2" style=" color: #eb6864"></i>@Model[i].Location</p>
                            </div>
                            <div class="card-body profile-container border">
                                <button class="btn bg-primary text-white btn-block mt-2 mr-2" type="submit" name="declineFriendrequest">Neka</button>
                                <button class="btn btn-success btn-block mt-2 ml-2" type="submit" name="friendrequest">Matcha</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <div class="invisible" id="id"> @Model[i].ID</div>
                    <div class="profile-container p-5 container">
                        <div class="card" style="width: 25rem;">
                            <div class="carousel slide" id="profileimages" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    @for (int y = 0; y < Model[i].Images.Count; y++)
                                    {
                                        if (i == 0)
                                        {
                                            <li data-target="#profileimages" data-slide-to="@y" class="active"></li>
                                        }
                                        else
                                        {
                                            <li data-target="#profileimages" data-slide-to="@y"></li>
                                        }
                                    }
                                </ol>
                                <div class="carousel-inner">
                                    @for (int y = 0; y < Model[i].Images.Count; y++)
                                    {
                                        if (i == 0)
                                        {
                                            <div class="carousel-item active">
                                                <img class="d-block w-100" src="@Model[i].Images[y].Url" />
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100" src="@Model[i].Images[y].Url" />
                                            </div>
                                        }
                                    }
                                </div>
                                <a class="carousel-control-prev" href="#profileimages" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#profileimages" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>

                            </div>

                            <div class="container">
                                <h4><b>@Model[i].Firstname @Model[i].Surname @{var age = DateTime.Today.Year - Model[i].Age.Year; } @age År</b></h4>
                                <p name="gender"><i class="fas fa-venus-mars mr-2" style=" color: #eb6864"></i>@Model[i].Gender</p>
                                <p><i class="fas fa-map-marker-alt mr-2" style=" color: #eb6864"></i>@Model[i].Location</p>
                            </div>
                            <div class="card-body profile-container border">
                                <button class="btn bg-primary text-white btn-block mt-2 mr-2" type="submit" name="declineFriendrequest">Neka</button>
                                <button class="btn btn-success btn-block mt-2 ml-2" type="submit" name="friendrequest">Matcha</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

        }

    </div>

</div>


